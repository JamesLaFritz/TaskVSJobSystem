{
  "metadata": [
    {
      "src": [
        {              
          "src":"../",
          "files": ["**.cs"],
          "exclude": [
            "docs/**"
            "**/bin/**",
            "**/obj/**"
          ]
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false,
      "force": true
    }
  ],
  "build": {
    "content": [
      {
        "files": ["api/**"]
      },
      {
        "src": "../",
        "files": [
          "CHANGELOG.md",
          "LICENSE.md",
          "Third Party Notices.md"
        ],
        "dest": "articles/"
      },
      {
        "files": ["**/toc.yml", "**.md"],
        "exclude": [
          "api/**",
          "articles/**",
          "Images/**",
          "obj/**",
          "**/bin/**",
          "**/obj/**",
          "**/[Tt]ests/**",
          "**/api/**"
        ]
      }
    ],
    "resource": [
      {
        "files": ["Images/**"]
      }
    ],
    "overwrite": [
      {
        "files": [
          "api/**.md"
        ],
        "exclude": [
          "obj/**",
        ]
      }
    ],
    "dest": "../docs",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "templates/unity"
    ],
    "globalMetadata": {
      "_appTitle": "[package-name] Documentation",
      "_enableSearch": true
    },
    "postProcessors": ["ExtractSearchIndex"],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
  }
}
